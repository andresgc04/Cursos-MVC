@model  List<CursoMvc.Models.TablesViewsModels.UserTableViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Usuarios</h2>
<div class="row">
    <div class="col-md-12" style="text-align:right">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/User/Add")'" value="Nuevo Usuario" />
    </div>
</div>

<div class="row" style="margin:10px">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Email</th>
                <th>Edad</th>
                <th></th>
            </tr>

            @foreach (var usuariosObj in Model)
            {
                <tr>
                    <td>@usuariosObj.Id_Usuario</td>
                    <td>@usuariosObj.Email</td>
                    <td>@usuariosObj.Edad</td>
                    <td>
                        <input onclick="jsDelete(@usuariosObj.Id_Usuario);" type="button" value="Eliminar" class="btn btn-danger" />
                        <input onclick="document.location.href='@Url.Content("~/User/Edit/"+usuariosObj.Id_Usuario)'" type="button" value="Editar" class="btn btn-default" />
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<script>
    function jsDelete(Id) {
        if(confirm("Estas seguro de eliminar este usuario?"))
        url = "@Url.Content("~/User/Delete")" + "/"+Id;

        $.post(url, function (data) {
            if (data == "1") {
                document.location.href = "@Url.Content("~/User/")"
            } else {
                alert("Ocurrio un error :C")
            }
        })
    }
</script>

